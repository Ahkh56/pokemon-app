{
  "name": "pokemon-app",
  "version": "1.0.0",
  "private": true,
  "main": "node_modules/expo/AppEntry.js",
  "scripts": {
    "start": "cross-env BASE_API_URL=https://pokeapi.co/api/v2/ expo start",
    "start:local": "expo start",
    "android": "expo run:android",
    "ios": "expo run:ios",
    "test": "jest --coverage",
    "lint": "eslint ."
  },
  "dependencies": {
    "@react-native-async-storage/async-storage": "^1.19.0",
    "@reduxjs/toolkit": "^1.9.5",
    "expo": "^48.0.0",
    "react": "18.2.0",
    "react-native": "0.71.8",
    "react-native-vector-icons": "^10.3.0",
    "react-redux": "^8.1.2",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@testing-library/jest-native": "5.4.3",
    "@testing-library/react-native": "12.1.2",
    "babel-jest": "^29.5.0",
    "cross-env": "^7.0.3",
    "jest": "^29.5.0",
    "react-test-renderer": "18.2.0"
  },
  "jest": {
    "preset": "react-native",
    "setupFilesAfterEnv": [
      "<rootDir>/jest-setup.js"
    ],
    "transformIgnorePatterns": [
      "node_modules/(?!(react-native|@react-native|@react-navigation)/)"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/**/index.js",
      "!src/**/styles.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 60,
        "functions": 60,
        "lines": 60,
        "statements": 60
      }
    }
  }
}
